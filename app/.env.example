# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Project settings
PROJECT_NAME="AI Agent API"
PROJECT_VERSION="0.1.0"

# Environment identifier (dev, test, prod)
ENVIRONMENT=dev

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS settings - comma-separated list or use * for all origins
ALLOWED_HOSTS=*

# =============================================================================
# AZURE OPENAI CONFIGURATION
# =============================================================================

# Azure OpenAI API credentials - Required for AI functionality
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Azure OpenAI deployment names
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# =============================================================================
# AZURE AI SEARCH CONFIGURATION
# =============================================================================

# Azure AI Search service credentials - Required for document search and indexing
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_ADMIN_KEY=your_search_admin_key_here
AZURE_SEARCH_API_KEY=your_search_admin_key_here

# Search index configuration
AZURE_SEARCH_INDEX_NAME=bc-water-index

# =============================================================================
# AZURE STORAGE CONFIGURATION
# =============================================================================

# Azure Storage Account credentials - Required for document storage and processing
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key_here
AZURE_STORAGE_CONTAINER_NAME=documents

# Alternative connection string format (optional - built from above values)
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_storage_account_name;AccountKey=your_storage_account_key_here;EndpointSuffix=core.windows.net

# =============================================================================
# AZURE DOCUMENT INTELLIGENCE CONFIGURATION
# =============================================================================

# Azure Document Intelligence service - Required for advanced document processing
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-region.api.cognitive.microsoft.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_document_intelligence_key_here

# =============================================================================
# LOCAL DEVELOPMENT / TUNNEL CONFIGURATION
# =============================================================================

# Local tunnel settings for development with private DNS resolution
# Set to true if using local tunnel for Azure OpenAI access
USE_LOCAL_TUNNEL=false
LOCAL_TUNNEL_PORT=8082
LOCAL_TUNNEL_HOST=localhost

# DNS resolution for tunnel - only needed when using local tunnel
TUNNEL_RESOLVE_HOST=your-azure-openai-host.openai.azure.com

# =============================================================================
# LANGCHAIN CONFIGURATION (OPTIONAL)
# =============================================================================

# LangChain tracing and monitoring (optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here
